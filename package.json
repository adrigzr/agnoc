{
  "name": "agnoc",
  "version": "0.0.0-development",
  "description": "Agnoc Robot Driver",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "build": "npm-run-all 'build:*'",
    "build:js": "NODE_ENV=production babel --extensions '.ts,.js' --out-dir lib src",
    "build:types": "tsc -p tsconfig.build.json",
    "check-coverage": "nyc check-coverage",
    "lint": "npm-run-all --aggregate-output --continue-on-error --parallel 'lint:!(fix)'",
    "lint:js": "eslint --cache --max-warnings 0 .",
    "lint:js:fix": "eslint --fix .",
    "lint:types": "tsc",
    "prebuild": "rm -rf ./lib",
    "prepublishOnly": "yarn build",
    "posttest": "npm run check-coverage && npm run validate-coverage",
    "release": "semantic-release",
    "test": "npm-run-all lint 'test:!(record)'",
    "test:node": "nyc mocha --reporter spec --recursive",
    "validate-coverage": "test \"$(cat coverage/coverage-summary.json | json total.lines.total)\" -gt 0"
  },
  "author": "Adrián González Rus",
  "license": "MIT",
  "engines": {
    "node": ">=10"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.12.13",
    "@babel/core": "^7.12.13",
    "@babel/preset-env": "^7.12.13",
    "@babel/preset-typescript": "^7.12.16",
    "@babel/register": "^7.12.13",
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@tsconfig/node14": "^1.0.0",
    "@types/chai": "^4.2.15",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.31",
    "@types/sinon-chai": "^3.2.5",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "chai": "^4.2.0",
    "commitizen": "^4.2.3",
    "core-js": "^3.8.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.19.0",
    "eslint-plugin-chai-friendly": "^0.6.0",
    "eslint-plugin-mocha": "^8.0.0",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^4.3.8",
    "json": "^10.0.0",
    "mocha": "^8.2.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "semantic-release": "^17.4.0",
    "sinon": "^9.2.3",
    "sinon-chai": "^3.5.0",
    "typescript": "^4.2.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
